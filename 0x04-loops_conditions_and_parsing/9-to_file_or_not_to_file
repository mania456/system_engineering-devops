#!/usr/bin/env bash
# This script checks properties of the file 'school' and prints messages about its existence, type, emptiness, and permissions using if-else statements.

if [ -e school ]; then
    echo "school file exists"
    if [ -f school ]; then
        echo "school is a regular file"
    else
        echo "school is not a regular file"
    fi
    if [ -s school ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi
    if [ -r school ]; then
        echo "school file has read permission"
    fi
    if [ -w school ]; then
        echo "school file has write permission"
    fi
    if [ -x school ]; then
        echo "school file has execute permission"
    fi
else
    echo "school file does not exist"
fi
