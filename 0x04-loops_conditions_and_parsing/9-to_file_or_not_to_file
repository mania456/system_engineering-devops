#!/usr/bin/env bash
# This script checks if the 'school' file exists and whether it is empty, printing corresponding messages using if-else statements.

if [ -e school ]; then
    echo "school file exists"
    if [ -s school ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi
else
    echo "school file does not exist"
fi
