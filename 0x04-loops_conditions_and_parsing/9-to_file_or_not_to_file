#!/usr/bin/env bash
# This script checks properties of the file 'school' and prints messages about its existence, type, and emptiness using if-else statements.

if [ -e school ]; then
    echo "school file exists"
    if [ -f school ]; then
        echo "school is a regular file"
    else
        echo "school is not a regular file"
    fi
    if [ -s school ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi
else
    echo "school file does not exist"
fi
